# Non-secret runtime configuration for Functions (loaded by Firebase CLI during deploy)
# Copy to `.env` locally and fill values. Do NOT commit your real `.env`.

# GCS bucket to store mail bodies/attachments
GCS_BUCKET_MAIL=

# Pub/Sub topics
GMAIL_PUBSUB_TOPIC=

# Pinecone (index name has a default in code; API key is required)
PINECONE_API_KEY=
PINECONE_INDEX_NAME=fyxer-prod

# Gmail OAuth
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=

# Microsoft Graph OAuth + webhook
MS_CLIENT_ID=
MS_CLIENT_SECRET=
MS_TENANT=common
MS_REDIRECT_URI=
GRAPH_WEBHOOK_URL=

# Optional providers / telemetry
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
SENTRY_DSN=

# KMS (set for prod to enforce encrypted storage)
KMS_KEY_RESOURCE=

# SAP HANA (optional)
HANA_HOST=
HANA_PORT=
HANA_USER=
HANA_PASSWORD=
HANA_SCHEMA=
HANA_INVOICES_VIEW=INVOICES
HANA_SSL=
HANA_SSL_VALIDATE=

# Incoherence flow defaults
INVOICE_NOTIFY_DEFAULT=maria.ttc@gmail.com
AMOUNT_TOLERANCE=0.01

# Emulator hints (optional)
PUBSUB_EMULATOR_HOST=
FIRESTORE_EMULATOR_HOST=
STORAGE_EMULATOR_HOST=

# Logging and external calls (dev convenience)
# Reduce function log verbosity: debug|info|warn|error|none
LOG_LEVEL=info

# Disable external Gmail calls (suppresses emulator network warnings)
# Set to 1/true/yes to skip Gmail token refresh + API requests
GMAIL_DISABLE=
